generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Blog {
  id         Int      @id @default(autoincrement())
  title      String
  description String
  image      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  tags       Tag[]
}

model Tag {
  id         Int      @id @default(autoincrement())
  title      String
  blog_id    Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  blog       Blog     @relation(fields: [blog_id], references: [id])
}